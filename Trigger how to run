//create table
SQL> CREATE TABLE STUDENT (
Roll_No NUMBER PRIMARY KEY,
Name VARCHAR(20),
Marks NUMBER(5)
);
Table created.

//create trigger
SQL>CREATE OR REPLACE TRIGGER msg
AFTER INSERT OR UPDATE OR DELETE ON STUDENT
FOR EACH ROW
BEGIN
IF INSERTING THEN
DBMS_OUTPUT.PUT_LINE('Student inserted: Roll No =' || :NEW.Roll_No
|| ', Name = ' || :NEW.Name);
ELSIF UPDATING THEN
DBMS_OUTPUT.PUT_LINE('Student updated: Old Marks = ' ||
:OLD.Marks || ', New Marks = ' || :NEW.Marks);
ELSIF DELETING THEN
DBMS_OUTPUT.PUT_LINE('Student deleted: Roll No = ' || :OLD.Roll_No
|| ', Name = ' || :OLD.Name);
END IF;
END;
/
Trigger created.
==================================================================================
==========================================================

SQL> set serveroutput on;
SQL> insert into student values(2,'PQR',79);
Student inserted: Roll No =2, Name = PQR
1 row created.
SQL> update student set marks = 85 where Roll_No = 2;
Student updated: Old Marks = 79, New Marks = 85
1 row updated.
SQL> delete from student where Roll_No = 2;
Student deleted: Roll No = 2, Name = PQR

